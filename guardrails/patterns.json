    { "id": "base64-decode", "pattern": "Base64\\s+decode", "severity": "low", "category": "encoding" },
    { "id": "wget-download", "pattern": "wget\\s+", "severity": "low", "category": "download" },
    { "id": "curl-download", "pattern": "curl\\s+", "severity": "low", "category": "download" }
  ]
}
