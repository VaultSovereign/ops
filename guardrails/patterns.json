      "prohibited": [
        { "id": "shell-rce", "pattern": "bash\\s+-c.*curl.*\\|\\s*sh", "severity": "high" },
        { "id": "ncat-reverse", "pattern": "\\bncat\\b|\\bnc\\s+-e\\b", "severity": "high" },
        { "id": "meterpreter", "pattern": "meterpreter", "severity": "high" },
        { "id": "powershell-enc", "pattern": "powershell\\s+-enc\\b", "severity": "medium" },
        { "id": "rm-rf", "pattern": "rm\\s+-rf\\b", "severity": "medium" },
        { "id": "mimikatz", "pattern": "mimikatz\\b", "severity": "high" },
        { "id": "pipe-install", "pattern": "curl.*\\|\\s*sh", "severity": "high" }
      ]
    },
    "advisory": {
      "prohibited": [
        { "id": "shell-rce", "pattern": "bash\\s+-c.*curl.*\\|\\s*sh", "severity": "high" },
        { "id": "ncat-reverse", "pattern": "\\bncat\\b|\\bnc\\s+-e\\b", "severity": "high" },
        { "id": "meterpreter", "pattern": "meterpreter", "severity": "high" },
        { "id": "mimikatz", "pattern": "mimikatz\\b", "severity": "high" }
      ]
    },
    "lab-only": {
      "prohibited": []
    }
  },
