{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Signal",
  "type": "object",
  "required": ["id", "title", "source", "weight", "epoch", "scope"],
  "properties": {
    "id": { "type": "string" },
    "title": { "type": "string" },
    "description": { "type": "string" },
    "source": { "type": "string" },
    "weight": { "type": "number", "minimum": 0, "maximum": 1 },
    "epoch": { "type": "string" },
    "scope": { "type": "string", "enum": ["repo", "program", "federation"] },
    "tags": { "type": "array", "items": { "type": "string" } }
  }
}
