{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://vaultmesh.org/schemas/signal.schema.json",
  "title": "VaultMesh Signal Schema",
  "description": "Schema for VaultMesh governance signals",
  "type": "object",
  "required": ["id"],
  "properties": {
    "id": {
      "type": "string",
      "minLength": 1,
      "description": "Unique signal identifier"
    },
    "title": {
      "type": "string",
      "description": "Signal title or summary"
    },
    "summary": {
      "type": "string",
      "description": "Brief signal summary"
    },
    "weight": {
      "type": "number",
      "minimum": 0,
      "default": 1,
      "description": "Signal weight for aggregation"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "Signal timestamp in ISO format"
    },
    "tags": {
      "type": "array",
      "items": {"type": "string"},
      "description": "Signal categorization tags"
    },
    "source": {
      "type": "string",
      "description": "Signal source or origin"
    },
    "metadata": {
      "type": "object",
      "description": "Additional signal metadata"
    }
  }
}