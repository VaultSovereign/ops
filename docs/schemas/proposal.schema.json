{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Proposal",
  "type": "object",
  "required": ["id", "title", "author", "created", "status"],
  "properties": {
    "id": { "type": "string" },
    "title": { "type": "string" },
    "author": { "type": "string" },
    "created": { "type": "string", "format": "date" },
    "status": { "type": "string", "enum": ["draft", "review", "accepted", "rejected", "executed"] },
    "summary": { "type": "string" },
    "motivation": { "type": "string" },
    "changes": { "type": "array", "items": { "type": "string" } },
    "references": { "type": "array", "items": { "type": "string" } }
  }
}
